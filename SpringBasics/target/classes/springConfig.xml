   <!-- <property name ="studentName"  value ="1" /> -->
    <!-- using p schema -->
   <!--   <bean class="com.spring.basic.SpringBasics.Student" name="student1" 
    p:studentId="1" p:studentName="AArti" p:studentAddress ="delhi">-->
   <!--  -->
   <property name="studentName">
   <value>Aarti</value>
   </property>
   <property name="studentAddress">
   <value>Delhi</value>
   </property>
   </bean>
   
   <!-- this is a bean for student class variables for second object -->
   <bean class="com.spring.basic.SpringBasics.Student" name="student2">
   <property name="studentId">
   <value>2</value>
   </property>
  	<!-- other way to define a property value as an attribute  -->
